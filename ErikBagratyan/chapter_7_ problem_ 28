#include <iostream>
#include <vector>
#include <cmath>

using namespace std;

double _pow(double n)
{
    return pow(n,3);
}

int factorial(int number)
{
    if(number == 0 || number == 1) return 1;
    int temp = 1;
    for(int i = 2; i <= number; ++i)
    {
        temp *= i;
    }
    return temp;
}

double sum_vec(vector<float> a, double (*ptrfun)(double))
{
    double sum = 0;
    double temp_sum = 0;
    for (int i = 0; i < a.size(); ++i) 
    {
        temp_sum = 0;
        for(int j = 0; j < i + 1; ++j)
        {
            temp_sum += pow(ptrfun(a[j]),j + 1);
        }
        sum += factorial(i)/temp_sum;
    }
    return sum;
}

int main()
{
    vector<float> vec{4,-5,2};            
    cout << "sum : " << sum_vec(vec,_pow);
    return 0;
}
